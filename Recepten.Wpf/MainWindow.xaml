        <Label Content="Bestandsnaam" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="98"/>
        <Button x:Name="btnSchrijfBestand" Content="Schrijf bestand" HorizontalAlignment="Left" Margin="248,59,0,0" VerticalAlignment="Top" Width="88" Height="28" Click="BtnSchrijfBestand_Click"/>
        <TextBlock x:Name="tbkErrors" HorizontalAlignment="Center" Margin="499,10,14,477" TextWrapping="Wrap" VerticalAlignment="Center" Height="94" Width="370" Background="#FFF90404" Foreground="White" Padding="10"/>
        <Button x:Name="btnSchrijfBestandMetKeuze" Content="Kies nieuw pad" HorizontalAlignment="Left" Margin="354,59,0,0" VerticalAlignment="Top" Width="88" Height="28" Click="btnSchrijfBestandMetKeuze_Click"/>


    </Grid>
</Window>
